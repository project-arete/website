    <!-- CHART.JS LOGIC -->
    <script>
        const apiKey = ""; // Provisioned by environment

        // --- GEMINI API INTEGRATION ---
        async function callGemini(prompt, systemInstruction = "") {
            const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
            const payload = {
                contents: [{ parts: [{ text: prompt }] }],
                systemInstruction: systemInstruction ? { parts: [{ text: systemInstruction }] } : undefined
            };

            for (let i = 0; i < 5; i++) {
                try {
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);
                    const result = await response.json();
                    return result.candidates?.[0]?.content?.parts?.[0]?.text || "No response generated.";
                } catch (error) {
                    if (i === 4) throw error;
                    await new Promise(res => setTimeout(res, Math.pow(2, i) * 1000));
                }
            }
        }

        async function generateProfile() {
            const input = document.getElementById('profile-prompt').value;
            if (!input) return;

            const btn = document.getElementById('gen-btn');
            const outputDiv = document.getElementById('profile-output');
            const resultDiv = document.getElementById('profile-result');
            const errBox = document.getElementById('error-box');

            btn.disabled = true;
            btn.innerHTML = '<span class="loading-dots">‚ú® Thinking</span>';
            errBox.classList.add('hidden');

            try {
                const systemPrompt = "You are a CNS/CP Infrastructure Architect. Generate a draft Connection Profile (CP) in JSON format based on the user's description. Follow the CNS/CP standards: identify Roles (provider/consumer), Unique properties, and Context constraints. Ensure the JSON is well-structured and valid.";
                const result = await callGemini(`Draft a Connection Profile (CP) JSON for this scenario: ${input}`, systemPrompt);
                
                outputDiv.classList.remove('hidden');
                resultDiv.textContent = result;
            } catch (err) {
                errBox.textContent = "Error communicating with the Lab Substrate. Please try again later.";
                errBox.classList.remove('hidden');
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<span>‚ú® Generate Draft Profile</span>';
            }
        }

        async function stressTest() {
            const input = document.getElementById('stress-prompt').value;
            if (!input) return;

            const btn = document.getElementById('stress-btn');
            const outputDiv = document.getElementById('stress-output');
            const resultDiv = document.getElementById('stress-result');
            const errBox = document.getElementById('error-box');

            btn.disabled = true;
            btn.innerHTML = '<span class="loading-dots">‚ú® Analyzing Architecture</span>';
            errBox.classList.add('hidden');

            try {
                const systemPrompt = "You are a CNS/CP Strategic Analyst. Analyze the user's agent architecture. Identify 3 critical 'governance gaps' (e.g., identity drift, uncontracted capabilities, ad-hoc integrations). For each gap, provide a specific CNS/CP solution using Layer 0 substrate principles. Be concise, professional, and slightly critical in a constructive way.";
                const result = await callGemini(`Analyze this architecture: ${input}`, systemPrompt);
                
                outputDiv.classList.remove('hidden');
                resultDiv.textContent = result;
            } catch (err) {
                errBox.textContent = "Error running analysis. The substrate might be temporarily unavailable.";
                errBox.classList.remove('hidden');
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<span>‚ú® Run Gap Analysis</span>';
            }
        }

        function copyOutput(id) {
            const text = document.getElementById(id).textContent;
            const textarea = document.createElement('textarea');
            textarea.value = text;
            document.body.appendChild(textarea);
            textarea.select();
            document.execCommand('copy');
            document.body.removeChild(textarea);
            // Non-alert visual feedback could be added here
        }

        // --- CHART UTILITIES ---
        function wrapLabels(labels, maxChar) {
            return labels.map(label => {
                if (label.length <= maxChar) return label;
                const words = label.split(' ');
                const lines = [];
                let currentLine = words[0];
                for (let i = 1; i < words.length; i++) {
                    if ((currentLine + " " + words[i]).length <= maxChar) {
                        currentLine += " " + words[i];
                    } else {
                        lines.push(currentLine);
                        currentLine = words[i];
                    }
                }
                lines.push(currentLine);
                return lines;
            });
        }

        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.color = '#64748b';
        
        const tooltipConfig = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) return label.join(' ');
                    return label;
                }
            },
            backgroundColor: 'rgba(30, 27, 75, 0.95)',
            padding: 12,
            cornerRadius: 8,
            titleFont: { size: 13, weight: 'bold' },
            bodyFont: { size: 12 }
        };

        const ctxCollapse = document.getElementById('collapseChart').getContext('2d');
        new Chart(ctxCollapse, {
            type: 'line',
            data: {
                labels: ['2023', '2024', '2025', '2026'],
